<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="APPLOG"  filename="/local/content/web/gds/logs/gds.log" bufferedIO="false" advertiseURI="https://gds-dev.nci.nih.gov/conf/gds/logs/gds.log" advertise="true">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<logger name="gov.nih.nci.cbiit.scimgmt.gds" level="info" >
			<AppenderRef ref="APPLOG"/>
		</logger>
		<Root level="error">
        	<AppenderRef ref="CONSOLE"/>
        </Root>
	</Loggers>
</Configuration>